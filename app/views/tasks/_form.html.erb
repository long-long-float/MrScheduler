<%= form_for(@task, url: group_tasks_path(params[:group_id]) ) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :deadline %><br>
    <%= f.datetime_select :deadline, start_year: Date.today.year, minute_step: 10 %>
  </div>
  <div class="field">
    <%= f.label :tags %><br>
    <%= text_area_tag :tags, @task.tags.join(', ') %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
