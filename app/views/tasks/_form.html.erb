<%= form_for(@task, url: @url ) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id %>

  <div class="field">
    <%= f.label :"課題タイトル" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :"課題内容" %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :"期限" %><br>
    <%= f.datetime_select :deadline, start_year: Date.today.year, minute_step: 10 %>
  </div>
  <div class="field">
    <%= f.label :"タグ" %><br>
    <%= text_area_tag :tags, @task.tags.join(', ') %>
  </div>
  <div class="actions">
    <%= f.submit :"登録する" %>
  </div>
<% end %>
