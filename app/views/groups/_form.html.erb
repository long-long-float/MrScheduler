<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :owner %>

  <div class="field">
    <%= f.label :"グループ名" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :"クイズ" %><br>
    <%= f.text_area :quiz %>
  </div>
  <div class="field">
    <%= f.label :"答え" %><br>
    <%= f.text_area :answer %>
  </div>
  <div class="field">
    <%= f.label :"タグ" %><br>
    <%= text_area_tag :tags, @group.tags.join(', ') %>
  </div>
  <div class="actions">
    <%= f.submit :"決定"%>
  </div>
<% end %>
