<%= div_hidden 'tags-data', @group.tags.map(&:to_s).to_json %>

<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :owner %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :quiz %><br>
    <%= f.text_area :quiz %>
  </div>
  <div class="field">
    <%= f.label :answer %><br>
    <%= f.text_area :answer %>
  </div>
  <div class="field">
    <%= f.label :tags %><br>
    <%= text_area_tag :tags, '', cols: 40, rows: 1 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
