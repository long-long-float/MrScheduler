<p id="notice"><%= notice %></p>

<% if @group.owner == current_user.id %>
  <%= link_to 'Edit', edit_group_path(@group) %>
<% end %>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>Tags:</strong>
  <%= @group.tags.map{|tag| "[#{tag}]"}.join %>
</p>

<h2>Tasks</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Deadline</th>
      <th>Tags</th>
    </tr>
  </thead>

  <tbody>
    <% @group.tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline %></td>
        <td><%= task.tags.join(', ') %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'New task', new_group_task_path(@group) %>